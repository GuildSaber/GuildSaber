<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;netstandard2.0</TargetFrameworks>
        <LangVersion>14</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
        <PackageReference Include="PolySharp">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <Compile Include="..\..\src\GuildSaber.Api\Features\**\*Responses.cs" Link="Routes\%(RecursiveDir)%(Filename)%(Extension)" />
        <Compile Include="..\..\src\GuildSaber.Api\Features\**\*Requests.cs" Link="Routes\%(RecursiveDir)%(Filename)%(Extension)" />
        <Compile Include="..\..\src\GuildSaber.Api\Features\Internal\*.cs" Link="Routes\Internal\%(Filename)%(Extension)" />
        <Compile Remove="..\..\src\GuildSaber.Api\Features\Internal\*Extensions.cs" Link="Routes\Internal\%(Filename)%(Extension)" />
        <Compile Include="..\..\src\GuildSaber.Common\Services\**\*StrongTypes\*.cs" Link="StrongTypes\%(Filename)%(Extension)" />
        <Compile Include="..\..\src\GuildSaber.Common\GlobalUsings.cs" Link="%(Filename)%(Extension)" />

    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CSharpFunctionalExtensions" />
        <PackageReference Include="System.Net.Http.Json" />
        <PackageReference Include="System.Text.Json" />
    </ItemGroup>

</Project>
